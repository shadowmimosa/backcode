{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "globals": {
    "document": true,
    "console": true
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "no-console": 1,
    // 禁止出现空代码块，允许 catch 为空代码块
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ]
  }
}